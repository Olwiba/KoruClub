# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/koruclub"

# Ollama LLM
OLLAMA_HOST="http://localhost:11434"

# WhatsApp Admin (only this user can DM the bot, receives online notification)
ADMIN_CHAT_ID="1234567890@c.us"

# Target Group (optional - if set, bot only responds in this group)
# If not set, bot will auto-set to first group that messages it
TARGET_GROUP_ID="1234567890-1234567890@g.us"

# Puppeteer (set in Docker, optional locally)
# PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium

# Retry attempts for WhatsApp initialization (optional, default: 3)
# WHATSAPP_INIT_RETRY_ATTEMPTS=10
